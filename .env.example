# droid2api environment configuration
# Copy this file to .env and adjust values as needed.

# Core server settings
PORT=3000
SESSION_SECRET=change-me-in-production
NODE_ENV=production

# Dashboard authentication token required to access /dashboard UI
AUTH_TOKEN=

# Factory credentials management
# Only one of FACTORY_API_KEY or DROID_REFRESH_KEY is required.
# FACTORY_API_KEY takes precedence when both are provided.
FACTORY_API_KEY=
DROID_REFRESH_KEY=

# Optional: override the path used to persist dashboard-managed tokens
# Defaults to ./data/token-store.json when unset.
TOKEN_STORE_PATH=
